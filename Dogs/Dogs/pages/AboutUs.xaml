<Page x:Class="Dogs.pages.AboutUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="AboutUs">

    <Grid>
        <Image x:Name="Wall" Source="/DimaResources/Wall.gif" Grid.ColumnSpan="3" Stretch="Fill"></Image>
        <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontSize="55" FontWeight="Bold" TextWrapping="Wrap" Text="Мы команда разработчиков, которые сделали приложение                   с помощью которого, люди смогут завести себе питомца. Также в нашем приложении можно вылечить своего любимчика. Всем пис =D" TextAlignment="Center"></TextBlock>
        <Image Source="/DimaResources/Giga Dog.png" Opacity="0.3"></Image>
        <Button  MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" x:Name="BackBtn" Style="{StaticResource NoBlue}" BorderThickness="0" Width="200" Height="80" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,320,10,0" Click="BackBtn_Click">
            <Grid>
                <Image Source="/DimaResources/Button_1.png"></Image>
                <TextBlock Text="НАЗАД" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="UltraBold"></TextBlock>
            </Grid>
        </Button>
        <Image Width="300" Source="/DimaResources/NameCo.png" Margin="419,-255,681,255"></Image>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,70">
            <Image x:Name = "Head1" Source="/DimaResources/Head_1_A.gif" Width="230"></Image>
            <Image x:Name = "Head6" Source="/DimaResources/Head_6_A.gif" Width="230"></Image>
            <Image x:Name = "Head2" Source="/DimaResources/Head_2_A.gif" Width="230"></Image>
            <Image x:Name = "Head3" Source="/DimaResources/Head_3_A.gif" Width="230"></Image>
            <Image x:Name = "Head4" Source="/DimaResources/Head_4_A.gif" Width="230"></Image>
            <Image x:Name = "Head5" Source="/DimaResources/Head_5_A.gif" Width="230"></Image>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="Дизайн" FontSize="30" Margin="0,0,60,0"></TextBlock>
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="Тестирование" FontSize="30" Margin="0,0,80,0"></TextBlock>
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="Бэкэнд" FontSize="30" Margin="0,0,80,0"></TextBlock>
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="Бэкэнд" FontSize="30" Margin="0,0,140,0"></TextBlock>
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="БД" FontSize="30" Margin="0,0,120,0"></TextBlock> 
            <TextBlock FontFamily="pack://application:,,,/DimaResources/#Skellyman" FontWeight = "Bold" Text="Структура" FontSize="30" Margin="0,0,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
