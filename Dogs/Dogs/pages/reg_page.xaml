<Page x:Class="Dogs.pages.reg_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="reg_page">

    <Grid Background="#FFDFDCD3">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="40" Margin="0,0,0,50" HorizontalAlignment="Center">Регистрация</TextBlock>

            <!--Фамилия-->
            <TextBox FontSize="30" materialDesign:HintAssist.Hint="Фамилия"
                Width="400" BorderBrush="Black" Height="50" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2" x:Name="SurnameTb"
                     Margin="0,0,0,5"></TextBox>

            <!--Имя-->
            <TextBox FontSize="30" materialDesign:HintAssist.Hint="Имя"
                Width="400" BorderBrush="Black" Height="50" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2" x:Name="nameTb"
                     Margin="0,0,0,5"></TextBox>


            <TextBox FontSize="30" materialDesign:HintAssist.Hint="Отчество"
                Width="400" BorderBrush="Black" Height="50" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2" x:Name="PatronymicTb"
                     Margin="0,0,0,5"></TextBox>

            <TextBox FontSize="30" materialDesign:HintAssist.Hint="Логин" 
                Width="400" BorderBrush="Black" Height="50" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2" x:Name="LoginTb"
                     Margin="0,0,0,5"></TextBox>

            <PasswordBox FontSize="30" materialDesign:HintAssist.Hint="Пароль"
                BorderBrush="Black" Height="50" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2"
                         x:Name="PasswordTb"></PasswordBox>

            <Button Width="350" Height="50"
                    FontSize="30" Style="{StaticResource ButtonStyle20}"
                    x:Name="reg_btn" Content="Зарегистрироваться"
                    Background="#FFEA5850" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
