<Page x:Class="Dogs.pages.employee_nav_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="employee_nav_page">



    <Grid Background="#FFDFDCD3">

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                        HorizontalAlignment="Center" Margin="0,20,0,0">

                <Button  Style="{StaticResource NoBlue}"
                    BorderThickness="0" 
                    Width="250" Height="110" Background="Transparent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Image Source="/DimaResources/Button_1.png"></Image>
                        <TextBlock Text="Ищет дом" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" 
                               FontWeight="UltraBold"></TextBlock>
                    </Grid>
                </Button>

                <Button  Style="{StaticResource NoBlue}"
                    BorderThickness="0" 
                    Width="250" Height="110" Background="Transparent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Image Source="/DimaResources/Button_1.png"></Image>
                        <TextBlock Text="Заявки" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" 
                               FontWeight="UltraBold"></TextBlock>
                    </Grid>
                </Button>

                <Button  Style="{StaticResource NoBlue}"
                    BorderThickness="0" 
                    Width="250" Height="110" Background="Transparent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Image Source="/DimaResources/Button_1.png"></Image>
                        <TextBlock Text="Вольеры" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" 
                               FontWeight="UltraBold"></TextBlock>
                    </Grid>
                </Button>



            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top"
                        HorizontalAlignment="Center" Margin="0,10
                        ,0,0">

                <Button  Style="{StaticResource NoBlue}"
                    BorderThickness="0" 
                    Width="250" Height="110" Background="Transparent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Image Source="/DimaResources/Button_1.png"></Image>
                        <TextBlock Text="Ветеринары" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" 
                               FontWeight="UltraBold"></TextBlock>
                    </Grid>
                </Button>

                <Button  Style="{StaticResource NoBlue}"
                    BorderThickness="0" 
                    Width="250" Height="110" Background="Transparent" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Image Source="/DimaResources/Button_1.png"></Image>
                        <TextBlock Text="Приём" HorizontalAlignment="Center"
                               VerticalAlignment="Center" FontSize="25" 
                               FontWeight="UltraBold"></TextBlock>
                    </Grid>
                </Button>





            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                        VerticalAlignment="Center">

                <TextBlock FontSize="40" HorizontalAlignment="Center"
                           VerticalAlignment="Center">Краткое описание</TextBlock>
                <Image x:Name="Logo" Source="/DimaResources/Dog_Logo.gif"
                       Width="400" ></Image>
                <TextBlock FontSize="40" HorizontalAlignment="Center"
                           VerticalAlignment="Center">Краткое описание
                </TextBlock>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>


