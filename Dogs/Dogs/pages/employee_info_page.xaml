<Page x:Class="Dogs.pages.employee_info_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
      mc:Ignorable="d" 
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

      d:DesignHeight="800" d:DesignWidth="1400"
      Title="employee_info_page">

    <Grid Background="#FFDFDCD3">
        <Border Height="600" Width="900" Background="White">
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <Image Width="200" Source="/DimaResources/employee.png" />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="50,0,0,0">
                        <TextBlock FontSize="50" Margin="0,20,0,0" >Фамилия</TextBlock>
                        <TextBlock FontSize="50" Margin="0,20,0,0">Имя</TextBlock>
                        <TextBlock FontSize="50" Margin="0,20,0,0">Отчество</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="300,0,0,0">
                        <TextBlock FontSize="50" Margin="0,20,0,0" >Стаж</TextBlock>
                        <TextBlock FontSize="50" Margin="0,20,0,0">Логин</TextBlock>
                        <TextBlock FontSize="50" Margin="0,20,0,0">Пароль</TextBlock>
                    </StackPanel>

                </StackPanel>
                <Button Width="350" Height="50"
                    FontSize="30" Style="{StaticResource ButtonStyle20}"
                    x:Name="reg_btn" Content="Сохранить"
                    Background="#FFEA5850" Margin="0,20,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button  Width="60"  Height="60" Margin="0,0,10,10"></Button>
        </StackPanel>
    </Grid>
</Page>
