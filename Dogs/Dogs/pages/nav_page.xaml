<Page x:Class="Dogs.pages.nav_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="nav_page">

    <Grid Background="#FFDFDCD3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
         <!--лого-->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image></Image>
            <TextBlock FontSize="30">Краткое описание</TextBlock>
        </StackPanel>

        <Border  Grid.Column="1" Width="350" Height="450" Background="#FFD8C3A4">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="30">Собаки</TextBlock>
            </StackPanel>
        </Border>

        <Border  Grid.Column="2" Width="350" Height="450" Background="#FFD8C3A4">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock FontSize="30">Ветеринары</TextBlock>
            </StackPanel>
        </Border>

        <Button Grid.ColumnSpan="3" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,30,0">Войти</Button>

    </Grid>
</Page>
