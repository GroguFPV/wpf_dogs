<Page x:Class="Dogs.pages.auth_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dogs.pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="auth_page">

    <Grid Background="#FFDFDCD3">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="40" Margin="0,0,0,50" HorizontalAlignment="Center">Авторизация</TextBlock>

            <TextBox Width="400" BorderBrush="Black" Height="30" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2" x:Name="LoginTb"
                     Margin="0,0,0,5"></TextBox>

            <PasswordBox BorderBrush="Black" Height="30" Background="#FFDFDCD3"
                     BorderThickness="0,0,0,2"
                         x:Name="PasswordTb"></PasswordBox>

            <Button Width="250" Height="50" FontSize="30" x:Name="auth_btn" Content="Войти" Background="#FFEA5850" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
