<UserControl x:Class="Dogs.user_controls.archive_dog_uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dogs.user_controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="850">
    <Grid Background="#FFD9D9D9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Image Grid.Column="0"></Image>

        <StackPanel Grid.Column="1">
            <TextBlock FontSize="30">Номер</TextBlock>
            <TextBlock FontSize="30" VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       Margin="0,50,0,0">Дата поступления</TextBlock>
            
            
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock FontSize="30">Пол</TextBlock>
            <TextBlock Margin="0,50,0,0" FontSize="30">Подробнее</TextBlock>


        </StackPanel>


    </Grid>
</UserControl>
